<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.afinal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Final">
        <activity android:name=".item.ItemDetails" android:label="@string/item_details" />
        <activity android:name=".Categories.CategoryItem" android:label="@string/categories_item" />
        <activity android:name=".MainActivity"
            android:theme="@style/NoActionBar"/>
        <activity android:name=".ForgetPasswordActivity"
            android:theme="@style/NoActionBar"/>
        <activity android:name=".LoginActivity"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity"
            android:theme="@style/NoActionBar"/>
        <activity android:name=".ListOrder.OrderDetails" android:label="@string/order_details"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>